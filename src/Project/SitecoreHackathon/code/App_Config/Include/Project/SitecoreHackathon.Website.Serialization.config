<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
    <sitecore>
        <unicorn>
            <configurations>
                <configuration name="Project.SitecoreHackathon.Website" description="Sitecore Hackathon content" dependencies="Foundation.*,Feature.*" extends="Helix.Project">
                    <predicate>
                        <!-- Templates -->                        
                        <include name="Layouts" database="master" path="/sitecore/layout/layouts/Project/Sitecore Hackathon" />
                        <include name="PlaceholderSettings" database="master" path="/sitecore/layout/placeholder settings/Project/Sitecore Hackathon" />
                        <include name="Models" database="master" path="/sitecore/layout/models/Project/Sitecore Hackathon" />

                        <!-- Content -->
                        <include name="Content" database="master" path="/sitecore/content/sitecore-hackathon" />
                    </predicate>
                </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>